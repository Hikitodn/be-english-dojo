{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "shared/app/index",
  "compilerOptions": {
    "assets": [
      { "include": "templates/*.hbs", "watchAssets": true },
      { "include": "i18n/**/*", "watchAssets": true }
    ],
    "deleteOutDir": true
  }
}
